<button type="button" class="btn btn-default btn-xs" data-toggle="modal" alt="{{ 'Note.actions.edit'|trans }}" data-target="#editNoteModalForm-{{ note.id }}">
    <i class="fa-solid fa-edit" aria-hidden="true"></i>
</button>

<div class="modal fade" id="editNoteModalForm-{{ note.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="{{ path('note_edit', {'id': note.id}) }}" method="POST">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">{{ 'Note.actions.edit'|trans }}</h4>
                </div>
                <div class="modal-body">
                    {{ form_widget(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'actions.close'|trans() }}</button>
                    <button type="submit" class="btn btn-primary">{{ 'actions.save'|trans() }}</button>
                </div>
            </form>
        </div>
    </div>
</div>