{% if entities|length %}
<h4>{{('Trash.'~key)|trans()}} ({{entities|length}})</h4>
<table class="table table-striped table-condensed table-responsive table-hover">
    <thead>
        <tr>
            <th id="sf_admin_list_batch_actions">
                <input id="sf_admin_list_batch_checkbox" type="checkbox" title="Check all" onclick="checkAll();">
            </th>
            <th><small>{{ 'genericFields.name'|trans() }}</small></th>
            <th><small>{{ 'genericFields.deletedAt'|trans() }}</small></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><label><input type="checkbox" name="{{batchVariableName}}Ids[]" value="{{ entity.id }}" class="sf_admin_batch_checkbox"></td>
            <td><small>{{ entity }}</small></td>
            <td><small>{{ entity.deletedAt|date('d/m/Y H:i') }}</small> {% if entity.deletedBy %}{{'by'|trans()}} {{entity.deletedBy.getDisplayName()}}{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}    
