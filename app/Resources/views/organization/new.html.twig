{% extends 'base.html.twig' %}

{% block title %}
    {{'Organization.new'|trans}}
{% endblock title %}

{% block body %}
    <h1>{{'Organization.new'|trans}}<a class="sf-admin-help" href="#" data-toggle="modal" data-target="#helpModal-2"><i class="fa-solid fa-question-circle"></i></a></h1>
            {{ render(controller('PostparcBundle:Default:helpMessage', {'id': '2'})) }}

    <div id="sf_admin_bar">
        <div class="suggestionsBox bg-warning" id="suggestions" style="display: none;">
            <div class="suggestionList" id="autoSuggestionsList"></div>
        </div>
    </div>

    {{ form_start(form) }}
    <div id="sharedInformationFormOptions" class="bs-callout bs-callout-info">
               <h4>{{ 'sharedFormOptions'|trans() }}<a class="sf-admin-help" href="#" data-toggle="modal" data-target="#helpModal-33"><i class="fa-solid fa-question-circle"></i></a></h4>
               {{ render(controller('PostparcBundle:Default:helpMessage', {'id': '33'})) }}
               {{ form_row(form.isShared) }}
               {{ form_row(form.isEditableByOtherEntities) }}
            </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.organizationType) }}
            {{ form_row(form.name) }}
            {{ form_row(form.abbreviation) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.image) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.description) }}
            {{ form_row(form.siret) }}
            {{ form_row(form.nbAdherent) }}
            {{ form_row(form.tags) }}
            {{ form_row(form.observation) }}
            {{ form_row(form.showObservation) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.coordinate) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <i class="fa-solid fa-file" aria-hidden="true"></i> {{ form_label(form.attachments) }}
        </div>
        <div class="col-md-12">
            <ul class="attachments" data-prototype="{{ form_widget(form.attachments.vars.prototype)|e('html_attr') }}">

            </ul>
        </div>
    </div>
    {{ form_row(form._token) }}
    <div class="btn-group form-actions addActionsOnTop">
        <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="{{'actions.backToTheList'|trans()}}" data-container="body" href="{{path('organization_index')}}">
            <i class="fa-solid fa-list"></i>&nbsp;<span>{{'actions.backToTheList'|trans()}}</span>
        </a>
        <input type="submit" class="btn btn-primary" value="{{'actions.create'|trans()}}">
        <input type="submit" class="btn btn-info" name="createAndContinue" value="{{'actions.createAndContinue'|trans()}}">
    </div>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/postparc/js/check_list_organization.js')}}"></script>
    <script type="text/javascript" src="{{ asset('bundles/postparc/js/attachments.js') }}"></script>
{% endblock javascripts %}
