{% extends 'base.html.twig' %}

{% block title %}
   {{'PrintFormat.new'|trans}}
{% endblock title %}

{% block body %}
   <h1>{{'PrintFormat.new'|trans}}
      <a class="sf-admin-help" href="#" data-toggle="modal" data-target="#fieldsDescriptionModal"><i class="fa-solid fa-question-circle"></i></a>
   </h1>
   {{ form_start(form) }}

   <div id="sharedInformationFormOptions" class="bs-callout bs-callout-info">
      <h4>{{ 'sharedFormOptions'|trans() }}<a class="sf-admin-help" href="#" data-toggle="modal" data-target="#helpModal-33"><i class="fa-solid fa-question-circle"></i></a></h4>
            {{ render(controller('PostparcBundle:Default:helpMessage', {'id': '33'})) }}
            {{ form_row(form.isShared) }}
            {{ form_row(form.isEditableByOtherEntities) }}
   </div>

   {{ form_widget(form) }}
   <div class="btn-group">
      <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="{{'actions.backToTheList'|trans()}}" data-container="body" href="{{path('print_format_index')}}">
         <i class="fa-solid fa-list"></i>&nbsp;<span>{{'actions.backToTheList'|trans()}}</span>
      </a>
      <input type="submit" class="btn btn-primary" value="{{'actions.create'|trans()}}">
      <input type="submit" class="btn btn-info" name="createAndContinue" value="{{'actions.createAndContinue'|trans()}}">
   </div>
   {{ form_end(form) }}

   {#  modal help #}
   <div class="modal fade" tabindex="-1" role="dialog" id="fieldsDescriptionModal">
      <div class="modal-dialog modal-lg">
         <div class="modal-content">
            <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <h4 class="modal-title">{{'PrintFormat.help.fieldsDescription'|trans()}}</h4>
            </div>
            <div class="modal-body">
               <p><img src="{{ asset('bundles/postparc/images/mise_en_page_etiquettes.png') }}" alt="" width="600px"/></p>
            </div>
            <div class="modal-footer">
               <button type="button" class="btn btn-default" data-dismiss="modal">{{'actions.close'|trans()}}</button>
            </div>
         </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
   </div><!-- /.modal -->

{% endblock %}
