{% extends 'base.html.twig' %}
{% block title %}
   {{'Group.edit'|trans}} "{{group.name}}"
{% endblock title %}
{% block body %}
   <h1>{{'Group.edit'|trans}} "{{group.name}}"</h1>
   {% include 'default/updatedByDiv.html.twig' with {'object': group} %}

   {{ form_start(edit_form) }}

   <div id="sharedInformationFormOptions" class="bs-callout bs-callout-info">
      <h4>{{ 'sharedFormOptions'|trans() }}<a class="sf-admin-help" href="#" data-toggle="modal" data-target="#helpModal-33"><i class="fa-solid fa-question-circle"></i></a></h4>
            {{ render(controller('PostparcBundle:Default:helpMessage', {'id': '33'})) }}
            {{ form_row(edit_form.isShared) }}
            {{ form_row(edit_form.isEditableByOtherEntities) }}
   </div>

   {{ form_widget(edit_form) }}
   <div class="btn-group form-actions">
      <a class="btn btn-default" href="{{path('group_delete', {'id':group.id })}}" data-toggle="tooltip" data-placement="top" title="{{'actions.delete'|trans()}}" data-container="body" onclick="return confirm('{{'actions.confirmDelete'|trans}}');" >
         <i class="fa-solid fa-trash-alt"></i>
      </a>
      <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="{{'actions.backToTheList'|trans()}}" data-container="body" href="{{path('group_index')}}">
         <i class="fa-solid fa-list"></i>&nbsp;<span>{{'actions.backToTheList'|trans()}}</span>
      </a>
      <input type="submit" class="btn btn-primary" value="{{'actions.edit'|trans()}}">
   </div>
   {{ form_end(edit_form) }}
{% endblock %}
